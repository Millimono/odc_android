<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- Fournir un drawable pour l'état pressé -->
        <shape android:shape="rectangle">
            <solid android:color="#FF262D"/> <!-- Couleur quand le bouton est pressé -->

            <corners android:radius="18dp" /> <!-- Arrondir les coins -->
            <stroke
                android:width="2dp"
                android:color="#FFA500" /> <!-- Couleur de bordure -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>

    <item>
        <!-- Fournir un drawable pour l'état normal -->
        <shape android:shape="rectangle">
            <solid android:color="#60FF26"/> <!-- Couleur quand le bouton est pressé -->

            <corners android:radius="18dp" /> <!-- Arrondir les coins -->
            <stroke
                android:width="2dp"
                android:color="#FFA500" /> <!-- Couleur de bordure -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
